<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title_search_bar"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/color_theme"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:src="@mipmap/back_white_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:background="@drawable/shape_white_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:src="@mipmap/icon_d_search" />

        <com.rfid.pdaapp.views.ClearEditText
            android:id="@+id/search_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableRight="@mipmap/icon_d_clear_text"
            android:hint="请输入"
            android:imeOptions="actionSearch"
            android:paddingRight="9dp"
            android:singleLine="true"
            android:textColorHint="#FF575757"
            android:textSize="@dimen/dp_normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="搜索"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_middle_2" />

</LinearLayout>