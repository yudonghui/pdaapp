<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_stock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_gray_box_5"
            android:gravity="center"
            android:hint="请扫描库位"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/dp_middle_5" />

        <TextView
            android:id="@+id/tv_goods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_gray_box_5"
            android:gravity="center"
            android:hint="请扫描商品"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/dp_middle_5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_number_button"
            android:divider="@drawable/line_number_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_sub_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_number_button_left"
                android:gravity="center"
                android:minWidth="30dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_big" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:cursorVisible="true"
                android:gravity="center"
                android:minWidth="40dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:text="1"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/dp_middle_5" />

            <TextView
                android:id="@+id/tv_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_number_button_right"
                android:gravity="center"
                android:minWidth="30dp"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_big" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/color_red"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_normal" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>