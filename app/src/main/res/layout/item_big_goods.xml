<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_goods_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RK2010001644"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_middle_2" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="上海市闵行区"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_normal" />

    <TextView
        android:id="@+id/tv_bill_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XD2052641121"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_normal" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2021-12-31 12:45:45"
        android:textColor="@color/gray_50"
        android:textSize="@dimen/dp_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="操作人：于东辉"
            android:textColor="@color/gray_50"
            android:textSize="@dimen/dp_small"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_receive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="接收时间：2021-12-31 12:45:45"
            android:textColor="@color/gray_50"
            android:textSize="@dimen/dp_small"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_receive_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_theme_20"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:text="接收任务"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_small"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>