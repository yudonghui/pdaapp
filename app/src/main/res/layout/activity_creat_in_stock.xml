<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.puthouse.CreatInStockActivity">

    <com.rfid.pdaapp.views.TitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:title="创建退库单" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="销售订单号："
            android:textColor="@color/black"
            android:textSize="@dimen/dp_normal" />

        <EditText
            android:id="@+id/tv_bill_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@drawable/shape_edite_cursor"
            android:textSize="@dimen/dp_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="客户名称："
            android:textColor="@color/black"
            android:textSize="@dimen/dp_normal" />

        <EditText
            android:id="@+id/tv_cust_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@drawable/shape_edite_cursor"
            android:textSize="@dimen/dp_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="输入备注名称："
            android:textColor="@color/black"
            android:textSize="@dimen/dp_normal" />

        <EditText
            android:id="@+id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@drawable/shape_edite_cursor"
            android:textSize="@dimen/dp_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货类型:"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_normal" />

        <LinearLayout
            android:id="@+id/ll_stock_out"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_stock_out"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:src="@mipmap/select_icon" />

            <TextView
                android:id="@+id/tv_stock_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仓库退货"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_school_out"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_school_out"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:src="@mipmap/unselect_icon" />

            <TextView
                android:id="@+id/tv_school_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学校退货"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_normal" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_theme_30"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="提交入库单"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_middle_2" />
    </LinearLayout>
</LinearLayout>